<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#F8AC9FEA">

    <ImageView
        android:id="@+id/ivPlatform"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        tools:srcCompat="@tools:sample/avatars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvPlatformName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        tools:text="Platform Name"
        android:textSize="24sp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/ivPlatform"
        app:layout_constraintTop_toTopOf="@id/ivPlatform"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvGamesAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_margin="16dp"
        tools:text="Games amount"
        android:textSize="16sp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/ivPlatform"
        app:layout_constraintTop_toBottomOf="@id/tvPlatformName"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>