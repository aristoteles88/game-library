<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp">

    <ImageView
        android:id="@+id/ivGamePicture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/tvGameTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/ivGamePicture"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/full_names"/>

    <TextView
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/tvGameTitle"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="9,8"/>

    <TextView
        android:id="@+id/tvGenre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintStart_toStartOf="@id/tvGameTitle"
        app:layout_constraintTop_toBottomOf="@id/tvGameTitle"
        tools:text="@tools:sample/cities"/>

    <TextView
        android:id="@+id/tvReleaseYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintEnd_toEndOf="@id/tvRating"
        app:layout_constraintTop_toBottomOf="@id/tvRating"
        tools:text="2015"/>

    <ImageView
        android:id="@+id/ivWishlist"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvGameTitle"
        tools:srcCompat="@tools:sample/backgrounds/scenic"/>

    <ImageView
        android:id="@+id/ivFinished"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tvRating"
        tools:srcCompat="@tools:sample/backgrounds/scenic"/>


</androidx.constraintlayout.widget.ConstraintLayout>